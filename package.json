{
  "name": "lesscoopsdujour",
  "version": "1.0.0",
  "description": "Plateforme d'actualités béninoises - Les Scoops du Jour",
  "main": "src/index.html",
  "scripts": {
    "build": "webpack --mode production",
    "build:prod": "webpack --config webpack.prod.js",
    "build:analyze": "ANALYZE=true npm run build:prod",
    "build:widgets": "webpack --mode production --config webpack.config.js --entry ./src/js/widgets.js",
    "build:widgets:dev": "webpack --mode development --config webpack.config.js --entry ./src/js/widgets.js",
    "dev": "webpack serve --mode development --open",
    "start": "npm run dev",
    "serve:prod": "npx serve dist -p 3000",
    "test": "npm run test:unit",
    "test:unit": "jest --config jest.config.js",
    "test:integration": "jest --config jest.config.js --testPathPattern=integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:performance": "node tests/performance/performance-tests.js",
    "test:lighthouse": "lighthouse http://localhost:8080 --config-path=lighthouserc.js",
    "test:lighthouse:ci": "lighthouse-ci http://localhost:8080 --config-path=lighthouserc.js",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:performance",
    "test:coverage": "jest --config jest.config.js --coverage --coverageReporters=html",
    "test:watch": "jest --config jest.config.js --watch",
    "playwright:install": "playwright install",
    "playwright:install-deps": "playwright install-deps",
    "audit:security": "npm audit --audit-level high",
    "audit:performance": "npm run test:lighthouse",
    "audit:accessibility": "npx axe http://localhost:8080",
    "audit:all": "npm run audit:security && npm run audit:performance && npm run audit:accessibility",
    "deploy:preview": "npm run build:prod && npm run serve:prod",
    "clean": "rm -rf dist coverage test-results playwright-report lighthouse-reports performance-reports",
    "lint": "npx eslint src/**/*.js --fix",
    "format": "npx prettier --write src/**/*.{js,css,html}",
    "precommit": "npm run lint && npm run test:unit && npm run build",
    "release": "npm run clean && npm run test:all && npm run build:prod && npm run audit:all"
  },
  "keywords": [
    "news",
    "benin",
    "actualites",
    "plateforme",
    "testing",
    "e2e",
    "performance"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@playwright/test": "^1.40.0",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.0",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.0",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^11.0.0",
    "lighthouse-ci": "^1.13.0",
    "mini-css-extract-plugin": "^2.7.0",
    "playwright": "^1.40.0",
    "puppeteer": "^21.0.0",
    "style-loader": "^3.3.3",
    "terser-webpack-plugin": "^5.3.0",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.2"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/?(*.)+(spec|test).js",
      "!**/node_modules/**"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.config.js",
      "!src/**/*.min.js",
      "!src/templates/**/*.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
